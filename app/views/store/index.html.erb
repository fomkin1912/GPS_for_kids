
<div id='catalog' class='container'>
  
  <% if notice %>
  <p id="notice"><%= notice %></p>
  <% end %>
  
  <div class="page-header">
    <h1>КАТАЛОГ</h1>
  </div>
  
  <% @products.in_groups_of(3, false).each do |group| %>
    <div class="row">
      <% group.each do |product| %>
        <div class="col-sm-6 col-md-4 entry">
            <div class="thumbnail">
               <a href=<%= '#'+product.image_url %> >
               <%= image_tag('products/small_'+product.image_url) %>
                  <div class="caption"> 
                    <h3><%= product.title %></h3>
              </a>
                    <a href="#x" class="overlay" id= <%= product.image_url %>></a>
                    <div class="popup">
                        <%= image_tag('products/'+product.image_url) %>
                    </div>
              <p> <%= sanitize(product.description) %> </p>
                    <div class="price_line">
                        <span class="price"><%= number_to_currency(product.price) %></span>
                        <%= button_to 'Добавить в корзину', line_items_path(product_id: product), class: "btn btn-primary", remote: true %>
                    </div>
                </div>
            </div>
        </div>
      <% end %>
    </div>
  <% end %>  
</div>


        