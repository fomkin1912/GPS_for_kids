  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  
  <%= form_tag do %>

      <div class="form-group">
        <%= label_tag :name, 'Имя:', class: 'control-label' %>
        <%= text_field_tag :name, params[:name], size: 40, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= label_tag :password, 'Пароль:', class: 'control-label' %>
        <%= password_field_tag :password, params[:password], size: 40, class: 'form-control'  %>
      </div>
  
      <div class="actions">
        <%= submit_tag "Войти", class: 'btn btn-default' %>
        <%= link_to 'Вернуться в каталог', store_path, class: 'btn btn-default' %>
      </div>
      
    </fieldset>
  <% end %>
</div>
