<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, 'Наименование', class: 'control-label' %>
    <%= f.text_field :title, size: 40, placeholder: 'Введите наименование товара', class: 'form-control'  %>
  </div>
  <div class="form-group">
    <%= f.label :description, 'Описание', class: 'control-label' %>
    <%= f.text_area :description, size: 40, placeholder: 'Введите описание товара', class: 'form-control'  %>
  </div>
  <div class="form-group">
    <%= f.label :image_url, 'Картинка', class: 'control-label' %>
    <%= f.text_field :image_url, size: 40, placeholder: 'Введите имя файла', class: 'form-control'  %>
  </div>
  <div class="form-group">
    <%= f.label :price, 'Цена', class: 'control-label' %>
    <%= f.text_field :price, size: 40, placeholder: 'Введите цену', class: 'form-control'  %>
  </div>
  <div class="actions">
    <%= f.submit "Сохранить", class: "btn btn-default" %>
    <%= link_to 'К списку товаров', products_path, class: 'btn btn-default' %>
  </div>
<% end %>
