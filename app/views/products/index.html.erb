<div class='container'>

<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

    <div class='page-header'>
        <h1>Список товаров</h1>
    </div>
    <% @products.in_groups_of(3,false).each do |group| %>
        <div class="row">    
        <% group.each do |product| %>
            <div class="col-sm-6 col-md-4 entry">
                <div class="thumbnail">        
                    <%= image_tag('products/small_'+product.image_url, class: 'list_image') %>
                        <div class="caption">
                        <h3> <%= product.title %></h3>
                        <p> <%= sanitize(product.description) %> </p>
                        <p><span class="price"><%= product.price.to_s+' руб.' %></span></p>
                            <div class="price_line">
                                <%= button_to 'Изменить', edit_product_path(product), method: :get, class: "btn btn-primary" %>
                                <%= button_to 'Удалить', product, method: :delete, class: "btn btn-primary", data: { confirm: 'Are you sure?' } %>
                            </div>
                         </div>
                </div>    
            </div>    
        <% end %>
        </div>
    <% end %>
    <%= link_to 'Добавить новый товар', new_product_path, class: 'btn btn-default' %>
</div>
