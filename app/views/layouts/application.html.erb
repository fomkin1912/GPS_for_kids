<!DOCTYPE html>
<html>
<head>
  <title><%=yield(:page_title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class='<%= controller.controller_name %>'>
  <div id="banner">
      <div class="outer-mask">
        <div class="inner-mask">
            <div class="content">GPS<br> for kids</div>
        </div>
    </div>
    <%= "GPS для детей" %>
    <%= controller.controller_name %>

  </div>
  
  <div id="columns">
    <div id="side">
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
        <%= render @cart %>
        <% end %>
      <% end %>  
      <ul>
        <li><%= link_to 'Главная', home_path %>
        <li><%= link_to 'Каталог', store_path %>
        <li><%= link_to 'Оплата и доставка', payments_path %>
      </ul>
      
    <% if session[:user_id] %>
      <ul>
        <li><%= link_to 'Заказы', orders_path %></li>
        <li><%= link_to 'Товары', products_path %></li>
        <li><%= link_to 'Пользователи', users_path %></li>
      </ul>

<%= button_to 'Logout', logout_path, method: :delete %>
<% end %>
      
    </div>
  </div>
  <div id="main">
    <%= yield %>
  </div>
  
</body>
</html>
