<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, 'Имя:', class: 'control-label' %>
    <%= f.text_field :name, size: 40, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :password, 'Пароль:', class: 'control-label' %>
    <%= f.password_field :password, size: 40, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :password_confirmation, 'Подтверждение:', class: 'control-label'%>
    <%= f.password_field :password_confirmation, size: 40, class: 'form-control' %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Зарегистрировать', class: 'btn btn-default' %>
    <%= link_to  'Назад', users_path, class: 'btn btn-default', style: 'display:inline-block' %>
  </div>


<% end %>
