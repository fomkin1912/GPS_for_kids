<div class='container orders'>
    <h1>Список пользователей</h1>
    
    <% if notice %>
      <p id="notice"><%= notice %></p>
    <% end %>
    
    <table class='table table-bodered'>
      <thead>
        <tr>
          <th>Имя</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= link_to 'Удалить', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    
    <%= button_to 'Новый пользователь', new_user_path, method: 'get', class: 'btn btn-default' %>
    
</div>
